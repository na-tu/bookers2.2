<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
<h>books#index</h>

<div>
  <%= flash[:notice]%>
</div>

<h2>User info</h2>
  <tbody>
      <%= image_tag @user.get_profile_image, size: "100x100" %>

  <br><th>name</th>
    <th><%= @user.name %></th><br>
  <th>introduction</th>
    <th><%= @user.introduction%></th>

  <%= link_to edit_user_path(@user) do %>
<i class="fas fa-user-cog"></i>
  <% end %>
  </tbody>

<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Opinion</h5>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
       </div>    

<div class="col-md-8 offset-md-1">
<h2>User</h2>
  <table>
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
      <% @users.each do |user| %>
  <tr>
    <span>
      <%= image_tag @user.get_profile_image, size: "100x100" %>
    </span>
  
  <td><%= user.name%></td>
  <td><%= link_to "Show", user_path(user.id)%></td>
  </tr>
<% end %>
</table>  