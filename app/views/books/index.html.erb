<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
<h>books#index</h>

<div>
  <%= flash[:notice]%>
</div>

<h2>User info</h2>
  <tbody>
    <% if current_user.profile_image .attached? %>
    <%= image_tag profile_image, size: "100x100" %>
    <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
   
  <br><th>name</th>
    <th><%= @user.name %></th><br>
  <th>introduction</th>
    <th><%= @user.introduction%></th>

  <%= link_to edit_user_path(@user) do %>
  <i class="fas fa-wrench"></i> 
  <% end %>
  </tbody>

<h2>New book</h2>
 <% if @book.errors.any? %>
            <%= @book.errors.count %>errors prohibited this obj from being saved:
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                 <% end %>
              </ul>
           <% end %>

  <%= form_with model: @book do |f| %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Opinion</h5>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
       </div>    

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th>title</th>
          <th>opinion</th>
        </tr>
      </thead>
    </table>
<% @books.each do |book| %>
 <tr>
   <span>
     <% if current_user.profile_image .attached? %>
     <%= image_tag profile_image, size: "100x100" %>
     <% else %>
     <%= image_tag 'no_image', size: "100x100" %>
     <% end %>
   </span>

    <td><%= link_to book.title,book_path(book.id)%></td>
    <td><%= book.body %></td>
 </tr>
<% end %>