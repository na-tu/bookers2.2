<h>books#index</h>
<main>
  <h2>User info</h2>
    <tbody> 
      <% if current_user.profile_image .attached? %>
       <%= image_tag profile_image, size: "100x100" %>
      <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      
	    <th>name</th>
      <th><%= @user.name %></th><br>
      
	    <th>introduction</th>
	    <th><%= @user.introduction%></th>
	     
	     <%= link_to "edit", edit_user_path(@user)%>
    </tbody>
     
  <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <h5>Title</h5>
        <%= f.text_field :title %>
      <h5>Opinion</h5>
        <%= f.text_area :body %>  
        <%= f.submit 'Create Book' %> 
        <% end %>  
        
          
        <h2>Books</h2>
        <table>
            <thead>
                <tr>
                    <th>title</th>
                    <th>opinion</th>
                </tr>
            </thead>
        </table>
<% @books.each do |book| %>
 <tr>
  <td>image</td>
    <span>
     <% if current_user.profile_image .attached? %>
       <%= image_tag profile_image, size: "100x100" %>
      <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
    </span>
    <td><%= link_to book.title,user_path%></td>
    <td><%= book.body %></td>
    
<% end %>

    <footer>
      	<p>CopyRight Infratop.inc</p>
    </footer>