<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
<h>books#index</h>

<div>
  <%= flash[:notice]%>
</div>

<h2>User info</h2>
  <tbody>
    <% if current_user.profile_image .attached? %>
    <%= image_tag profile_image, size: "100x100" %>
    <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
   
  <br><th>name</th>
    <th><%= @user.name %></th><br>
  <th>introduction</th>
    <th><%= @user.introduction%></th>

  <%= link_to edit_user_path(@user) do %>
  <i class="fas fa-wrench"></i>
  <% end %>
  </tbody>

<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Opinion</h5>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
       </div>    

<div class="col-md-8 offset-md-1">
<h2>Book deteil</h2>
    <div>
       <p><%= link_to @book.title,"book_path" %></p>
       <p><%= @book.body %></p>
       
        <span>
     <% if current_user.profile_image .attached? %>
     <%= image_tag profile_image, size: "100x100" %>
     <% else %>
     <%= image_tag 'no_image', size: "100x100" %>
     <% end %>
     <br><th><%= @user.name %></th>
   </span>

          <%= link_to 'Edit', edit_book_path(@book.id) %>
          <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <div>
      <%= flash[:success] %>
    </div>
    </div>
 </main>