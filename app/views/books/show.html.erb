<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
<h>books#show</h>

<div>
  <%= flash[:notice]%>
</div>

<h2>User info</h2>
  <tbody>
    <%= image_tag @user.get_profile_image , size: "100x100"%>

  <br><th>name</th>
    <th><%= @user.name %></th><br>
  <th>introduction</th>
    <th><%= @user.introduction%></th>

  <%= link_to edit_user_path(@user) do %>
　<i class="fas fa-user-cog"></i>
  <% end %>
  </tbody>

<h2>New book</h2>
  <%= form_with model: @book_new do |f| %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Opinion</h5>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
       </div>    

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
    <div>
       <p>
         <%= link_to @book.title,book_path %>
        </P> 
         <%=link_to user_path(@book.user) do %>
         <%= image_tag @user.get_profile_image, size: "100x100" %>
         <% end %>
         
       <p><%= @book.body %></p>
       
        <span>
     <th><%= link_to @user.name,user_path(@book.user) %></th>
   </span>

     <% if current_user==@book.user %>
          <%= link_to 'Edit', edit_book_path(@book.id) %>
          <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
     <% end %>
    <div>
      <%= flash[:success] %>
    </div>
    </div>
 </main>