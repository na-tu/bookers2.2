<h1>Books#show</h1>
<main>
  <h2>User info</h2>
    <tbody> 
      <% if current_user.profile_image .attached? %>
       <%= image_tag profile_image, size: "100x100" %>
      <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      
	    <th>name</th>
      <th><%= @user.name %></th><br>
      
	    <th>introduction</th>
	    <th><%= @user.introduction%></th>
	     
	     <%= link_to "edit", edit_user_path(@user)%>
    </tbody>
     
  <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <h5>Title</h5>
        <%= f.text_field :title %>
      <h5>Opinion</h5>
        <%= f.text_area :body %>  
        <%= f.submit 'Create Book' %> 
        <% end %>  
        
  <h2>Book deteil</h2>
    <div>
       <p><%= link_to @book.title,"book_path" %></p>
       <p><%= @book.body %></p>

          <%= link_to 'Edit', edit_book_path(@book.id) %>
          <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <div>
      <%= flash[:success] %>
    </div>
    </div>
 </main>
      
    <footer>
      	<p>CopyRight Infratop.inc</p>
    </footer>